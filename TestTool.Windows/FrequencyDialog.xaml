<Window x:Class="TestTool.Windows.FrequencyDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:view="clr-namespace:TestTool.Windows.Views"
        xmlns:local="clr-namespace:TestTool.Windows"
        mc:Ignorable="d"
        Title="FrequencyDialog" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <view:LabelSlider x:Name="fromFreq" Format="From:'int'Hz" Minimum="30" Maximum="20000" Value="30"/>
            <view:LabelSlider x:Name="toFreq" Format="To:'int'Hz" Minimum="30" Maximum="20000" Value="15000"/>
            <view:LabelSlider x:Name="stepFreq" Format="Step:'int'Hz" Minimum="1" Maximum="1000" Value="10"/>
            <Button Content="Export" HorizontalAlignment="Right" Width="100" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
