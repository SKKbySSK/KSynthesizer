<syncfusion:SfRadialSlider x:Class="Synthesizer.Windows.Thumb"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Synthesizer.Windows"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100" StartAngle="120" EndAngle="420" InnerRimStroke="#FF3C3C3C" OuterRimStroke="#FF232323">
    <syncfusion:SfRadialSlider.PointerStyle>
        <Style TargetType="{x:Type syncfusion:RadialPointer}" >
            <Setter Property="Height" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type syncfusion:RadialPointer}">
                        <Border  Background="Black"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </syncfusion:SfRadialSlider.PointerStyle>
</syncfusion:SfRadialSlider>
